{
  "$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "files": {
    "include": ["src/**", "workers/**", "e2e/**", "*.ts", "*.tsx", "*.js", "*.json"],
    "ignore": ["dist", "node_modules", ".vinxi", ".output", ".tanstack", "*.gen.ts", "/nix/**"]
  }
}
